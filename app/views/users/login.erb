<% if @error_message %>
  <br>
  **<%= @error_message %>**
  <br><br>
<% else %>
  <h1>Welcome, Please Log In</h1>
<% end %>

<form action="/login" method="POST">
  <label> Username: </label>
  <input type="text" name="username"> </br>
  
  <label> Password: </label>
  <input type="password" name="password"> </br>
  <input type="submit" value="Log In">
</form>